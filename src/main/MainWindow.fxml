<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
        fx:controller="main.MainController"
        maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
        prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <top>

        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem onAction="#newFile" text="New"/>
                <MenuItem onAction="#openFile" text="Open"/>
                <MenuItem onAction="#saveFile" text="Save"/>
            </Menu>
            <Menu text="Help">
                <MenuItem id="menuItem_save" onAction="#showAbout" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane


                fx:id="tabPane_main" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS"
                BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>